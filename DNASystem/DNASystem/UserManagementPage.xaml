<UserControl x:Class="DNASystem.UserManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="871" Width="1479">
    <Grid Background="#F8FAFC" Margin="0,0,0,-253">
        <StackPanel Margin="0,40,0,323" HorizontalAlignment="Center" Width="1200">
            <!-- Header -->
            <TextBlock Text="Quản lý tài khoản" FontWeight="Bold" FontSize="36" Foreground="#1E293B" Margin="0,0,0,8" HorizontalAlignment="Center"/>
            <TextBlock Text="Quản lý người dùng và phân quyền hệ thống" Foreground="#64748B" FontSize="16" Margin="0,0,0,32" HorizontalAlignment="Center"/>

            <!-- Stats Card -->
            <Border Background="#EEF2FF" Padding="24" Margin="0,0,0,32" Width="320" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Tổng số người dùng" Foreground="#64748B" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtTotalUsers"
           Text="{Binding TotalUsers}"
           FontWeight="Bold"
           FontSize="32"
           Foreground="#7C3AED"
           HorizontalAlignment="Center"/>
                    
                </StackPanel>
            </Border>

            <!-- Search and Filter -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24" HorizontalAlignment="Center">
                <TextBox Width="300" Margin="0,0,12,0" Padding="10,6" Foreground="Black"
                         Background="White" BorderBrush="#CBD5E1" BorderThickness="1"
                         FontSize="15" Tag="Tìm kiếm theo tên hoặc email..."/>
                <ComboBox x:Name="cbRole" Width="150" Margin="0,0,12,0" Padding="10,6" FontSize="15" Background="White" BorderBrush="#CBD5E1" BorderThickness="1" SelectedIndex="0" SelectionChanged="cbRole_SelectionChanged">
                    <ComboBoxItem Content="Tất cả vai trò"/>
                    <ComboBoxItem Content="Quản trị viên"/>
                    <ComboBoxItem Content="Nhân viên"/>
                    <ComboBoxItem Content="Khách hàng"/>
                </ComboBox>
                
                <Button x:Name="btnThemmoi" Content="Thêm mới" Background="#7C3AED" Foreground="White" Padding="18,6" FontSize="15" BorderThickness="0" Click="btnThemmoi_Click"/>
            </StackPanel>

            <!-- ListView -->
            <ListView x:Name="UserListView" ItemsSource="{Binding Users}" Height="400"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          FontSize="15"
          Background="White"
          >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="USER ID" DisplayMemberBinding="{Binding UserId}" Width="80"/>
                        <GridViewColumn Header="USERNAME" DisplayMemberBinding="{Binding Username}" Width="120"/>
                        <GridViewColumn Header="HỌ TÊN" DisplayMemberBinding="{Binding Fullname}" Width="180"/>
                        <GridViewColumn Header="GIỚI TÍNH" DisplayMemberBinding="{Binding Gender}" Width="80"/>
                        <GridViewColumn Header="VAI TRÒ" DisplayMemberBinding="{Binding RoleName}" Width="120"/>
                        <GridViewColumn Header="EMAIL" DisplayMemberBinding="{Binding Email}" Width="180"/>
                        <GridViewColumn Header="SỐ ĐIỆN THOẠI" DisplayMemberBinding="{Binding Phone}" Width="120"/>
                        <GridViewColumn Header="NGÀY SINH" DisplayMemberBinding="{Binding Birthdate}" Width="120"/>
                        <GridViewColumn Header="ĐỊA CHỈ" DisplayMemberBinding="{Binding Address}" Width="200"/>
                        <!-- Thêm cột nút Xóa -->
                        <GridViewColumn Header="XÓA" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnXoa" Content="Xóa"
                    Background="#EF4444"
                    Foreground="White"
                    Padding="6,2"
                    Click="BtnXoa_Click"
                    Tag="{Binding UserId}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
