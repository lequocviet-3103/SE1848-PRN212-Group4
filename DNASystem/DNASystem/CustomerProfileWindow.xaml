<Window x:Class="DNASystem.CustomerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNASystem"
        mc:Ignorable="d"
        Title="CustomerProfileWindow" Height="523" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" >
            <TextBlock Text="Thông tin cá nhân" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#1E90FF"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel>
                <TextBlock Text="Họ và tên"/>
                <TextBox x:Name="txtFullName" Height="30" BorderBrush="#ccc" BorderThickness="1" Padding="5"/>

                <TextBlock Text="Giới tính" Margin="0,10,0,0"/>
                <ComboBox x:Name="cboGender" Height="30" SelectedValuePath="Content">
                    <ComboBoxItem Content="Nam"/>
                    <ComboBoxItem Content="Nữ"/>
                    
                </ComboBox>

                <TextBlock Text="Email" Margin="0,10,0,0"/>
                <TextBox x:Name="txtEmail" Height="30" BorderBrush="#ccc" BorderThickness="1" Padding="5"/>

                <TextBlock Text="Số điện thoại" Margin="0,10,0,0"/>
                <TextBox x:Name="txtPhone" Height="30" BorderBrush="#ccc" BorderThickness="1" Padding="5" />

                <TextBlock Text="Ngày sinh" Margin="0,10,0,0"/>
                <DatePicker x:Name="dtpBirthdate" Height="30"/>

                <TextBlock Text="Địa chỉ" Margin="0,10,0,0"/>
                <TextBox x:Name="txtAddress" Height="30" BorderBrush="#ccc" BorderThickness="1" Padding="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                <Button x:Name="btnSave" Content="Lưu thay đổi" Width="120" Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Đóng" Width="80"  Background="Gray" BorderBrush="Gray" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
