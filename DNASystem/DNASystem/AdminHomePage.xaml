<UserControl x:Class="DNASystem.AdminHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DNASystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F8FAFC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="253"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="White" Margin="0,0,10,0" CornerRadius="8">
            <StackPanel Margin="16" VerticalAlignment="Top">
                <TextBlock Text="Dịch vụ xét nghiệm DNA" FontWeight="Bold" FontSize="18" Foreground="#7C3AED" Margin="0,0,0,32"/>
                <Button x:Name="btnTrangchu" Content="Trang chủ" Margin="0,0,0,8" Padding="8,4" Click="Home_Click"/>
                <Button x:Name="btnHoSoCaNhan" Content="Hồ sơ cá nhân" Margin="0,0,0,8" Padding="8,4" Click="Profile_Click"/>
                <Button x:Name="btnDashboard" Content="Dashboard" Margin="0,0,0,8" Padding="8,4" Click="Dashboard_Click"/>
                <Button x:Name="btnQuanlytaikhoan" Content="Quản lý tài khoản" Margin="0,0,0,8" Padding="8,4" Click="UserManagement_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="#F8FAFC" Padding="24" CornerRadius="12">
            <ContentControl x:Name="MainContent"/>
        </Border>
    </Grid>
</UserControl>
