<Window x:Class="DNASystem.TestResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNASystem"
        mc:Ignorable="d"
            Height="650" Width="800"
    Background="#1E90FF" Loaded="Window_Loaded">
    <!-- Màu xanh nước biển -->

    <Grid Margin="20">
        <!-- Nút Quay lại -->
        <Button Content="← Quay lại"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Padding="10,5"
            Background="White"
            Foreground="#1E90FF"
            BorderBrush="White"
            FontWeight="Bold"
            Click="BackButton_Click"/>

        <!-- Form nhập Kit -->
        <Border Background="White"
            CornerRadius="10"
            Padding="20"
            Margin="0,40,0,0"
            VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Thông tin Test Result"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#1E90FF"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

                <StackPanel Margin="0,5">
                    <TextBlock Text="ResultId" Foreground="Black"/>
                    <TextBox x:Name="txtResultId"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Customer ID" Foreground="Black"/>
                    <TextBox x:Name="txtCustomerId"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Staff ID" Foreground="Black"/>
                    <TextBox x:Name="txtStaffId"/>
                </StackPanel>
                <StackPanel Margin="0,5">
                    <TextBlock Text="Service Id" Foreground="Black"/>
                    <TextBox x:Name="txtServiceId"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Booking ID" Foreground="Black"/>
                    <TextBox x:Name="txtBookingId"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Receive Date" Foreground="Black"/>
                    <DatePicker x:Name="dpReceiveDate"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Description" Foreground="Black"/>
                    <TextBox x:Name="txtDescription" Height="42"/>
                </StackPanel>

                <StackPanel Margin="0,5">
                    <TextBlock Text="Status" Foreground="Black"/>
                    <ComboBox x:Name="cbStatus" Margin="0,5,0,0" >
                        <ComboBoxItem Content="Trùng nhau" />
                        <ComboBoxItem Content="Không trùng nhau"/>

                    </ComboBox>
                </StackPanel>

                

                <!-- Nút Save -->
                <Button Content="Lưu Test Result"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Padding="10,5"
                    Width="150"
                    Background="#1E90FF"
                    Foreground="White"
                    BorderBrush="White"
                    FontWeight="Bold"
                    Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
