<Window x:Class="DNASystem.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNASystem"
        mc:Ignorable="d"
        Title="Thêm người dùng mới" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>

            <TextBlock Text="Họ tên:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtFullname" Margin="0,0,0,10"/>

            <TextBlock Text="Giới tính:" Margin="0,0,0,2"/>
            <ComboBox x:Name="cbGender" Margin="0,0,0,10">
                <ComboBoxItem Content="Nam"/>
                <ComboBoxItem Content="Nữ"/>
                <ComboBoxItem Content="Khác"/>
            </ComboBox>

            <TextBlock Text="Vai trò:" Margin="0,0,0,2"/>
            <ComboBox x:Name="cbRole" Margin="0,0,0,10">
                <ComboBoxItem Content="Quản trị viên"/>
                <ComboBoxItem Content="Nhân viên"/>
                <ComboBoxItem Content="Khách hàng"/>
            </ComboBox>

            <TextBlock Text="Email:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

            <TextBlock Text="Số điện thoại:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,10"/>

            <TextBlock Text="Ngày sinh:" Margin="0,0,0,2"/>
            <DatePicker x:Name="dpBirthdate" Margin="0,0,0,10"/>

            <TextBlock Text="Địa chỉ:" Margin="0,0,0,2"/>
            <TextBox x:Name="txtAddress" Margin="0,0,0,10"/>

            <Button Content="Lưu" Click="BtnLuu_Click" Background="#7C3AED" Foreground="White"/>
        </StackPanel>
    </ScrollViewer>
</Window>
