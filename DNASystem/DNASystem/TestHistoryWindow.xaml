<Window x:Class="DNASystem.TestHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DNASystem"
        mc:Ignorable="d"
        Title="TestHistoryWindow" Height="450" Width="882" Loaded="Window_Loaded" >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Label Grid.Row="0"
               FontSize="30"
               Content="Lịch sử xét nghiệm của tôi"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0,0,0,20"/>


        <DataGrid Grid.Row="1"
                  x:Name="BookingListDataGrid"
                  AutoGenerateColumns="False"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  FontSize="12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookingId}" Width="35" />
                <DataGridTextColumn Header="Ngày Đặt" Binding="{Binding Date}" Width="100" />
                <DataGridTextColumn Header="Nhân viên" Binding="{Binding StaffName}" Width="100" />
                <DataGridTextColumn Header="Dịch vụ" Binding="{Binding ServiceName}" Width="70" />
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="70" />
                <DataGridTextColumn Header="Phương thức" Binding="{Binding Method}" Width="150" />
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="70" />
                <DataGridTextColumn Header="Trạng thái Kit" Binding="{Binding KitStatus}" Width="100" />

                <DataGridTemplateColumn Header="Hành động" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                    Click="ActionButton_Click"
                    Tag="{Binding}" 
                    Loaded="ActionButton_Loaded"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>



            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnBack" Content="Quay về" Width="100" Margin="0,0,10,0" Click="btnBack_Click" />
            <Button x:Name="btnCancel" Content="Hủy" Width="100" Click="btnHuy_Click" />
        </StackPanel>
    </Grid>

</Window>
